{
  "name": "@kubekavach/core",
  "version": "0.1.0",
  "description": "Core types and utilities for KubeKavach",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils/rate-limiter": {
      "import": "./dist/utils/rate-limiter.js"
    },
    "./utils/security": {
      "import": "./dist/utils/security.js"
    },
    "./utils/logger": {
      "import": "./dist/utils/logger.js"
    },
    "./utils/metrics": {
      "import": "./dist/utils/metrics.js"
    },
    "./utils/health": {
      "import": "./dist/utils/health.js"
    },
    "./utils/graceful-shutdown": {
      "import": "./dist/utils/graceful-shutdown.js"
    },
    "./utils/error-recovery": {
      "import": "./dist/utils/error-recovery.js"
    },
    "./utils/database": {
      "import": "./dist/utils/database.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "prom-client": "^15.1.3",
    "sqlite3": "^5.1.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.15.5",
    "fastify": "^5.5.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
